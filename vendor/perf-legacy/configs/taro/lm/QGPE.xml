                   <AsyncId>VENDOR_HINT_ACTIVITY_STOP</AsyncId>
                   <AsyncType>-1</AsyncType>
                </Trigger>

            </Triggers>

            <Configs>
                <FPS_NODE>/sys/class/drm/sde-crtc-0/measured_fps</FPS_NODE>
