                0x42804000,0
            </PREDICTIVE_PROFILE3>
            <!-- DDR_LAT_MIN_FREQ_GOLD resource opcode,value-->
            <PREDICTIVE_PROFILE4>
                0x43488000,2092000
            </PREDICTIVE_PROFILE4>
            <!-- SCHED_LOAD_BOOST GOLD resource opcode,value-->
            <PREDICTIVE_PROFILE5>
                0x40C68000, -3
            </PREDICTIVE_PROFILE5>
        </Profile>
    </Profiles>

